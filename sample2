import javax.xml.datatype.DatatypeFactory;
import javax.xml.datatype.XMLGregorianCalendar;
import java.time.OffsetDateTime;
import java.time.ZoneId;
import java.util.GregorianCalendar;

public static String normalize(String input) {
    if (input == null || input.isBlank()) return "";

    input = input.trim();

    try {
        // Parses: 2026-01-16T10:11:54.848284788-05:00
        OffsetDateTime odt = OffsetDateTime.parse(input); // ISO_OFFSET_DATE_TIME

        GregorianCalendar gc = GregorianCalendar.from(odt.atZoneSameInstant(ZoneId.of("UTC"))); // or keep same offset
        XMLGregorianCalendar xcal = DatatypeFactory.newInstance().newXMLGregorianCalendar(gc);

        return xcal.toXMLFormat();
    } catch (Exception e) {
        // try other formats if you want (yyyy-MM-dd, M/d/yyyy, etc.)
        return "";
    }
}