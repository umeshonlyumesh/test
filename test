@Test
void testRun_success() throws Exception {
    String response = "File content";

    // Mock the complete fluent chain
    when(restClient.post()).thenReturn((RestClient.RequestBodyUriSpec) uriSpec);
    when(uriSpec.uri(anyString(), ArgumentMatchers.<Object>anyVararg())).thenReturn(headersSpec);
    when(uriSpec.uri(anyString())).thenReturn(headersSpec);

    // Mock header/contentType chain (RequestBodySpec)
    when(((RestClient.RequestBodySpec) headersSpec).header(anyString(), anyString())).thenReturn((RestClient.RequestBodySpec) headersSpec);
    when(((RestClient.RequestBodySpec) headersSpec).contentType(any())).thenReturn((RestClient.RequestBodySpec) headersSpec);
    when(((RestClient.RequestBodySpec) headersSpec).body(any(), eq(String.class))).thenReturn(headersSpec);

    when(headersSpec.retrieve()).thenReturn(responseSpec);
    when(responseSpec.body(String.class)).thenReturn(response);

    // Act
    service.run();

    // Assert
    verify(restClient, times(1)).post();
    verify(responseSpec, times(1)).body(String.class);
}