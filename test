package com.truist.billing.service;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.extension.ExtendWith;
import org.mockito.*;
import org.mockito.junit.jupiter.MockitoExtension;
import org.springframework.web.util.UriComponentsBuilder;

import java.time.LocalDate;
import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;

import static org.mockito.ArgumentMatchers.any;
import static org.mockito.ArgumentMatchers.eq;
import static org.mockito.Mockito.*;

@ExtendWith(MockitoExtension.class)
class BillingExtractServiceTest {

    @Mock
    private RestClient restClient;

    @Mock
    private RestClient.RequestHeadersUriSpec<?> uriSpec;

    @Mock
    private RestClient.ResponseSpec responseSpec;

    @Mock
    private BillingFileWriter fileWriter;

    @InjectMocks
    private BillingExtractService service;

    private final String BASE_URL = "http://localhost:8080/avs";

    @BeforeEach
    void setup() {
        ReflectionTestUtils.setField(service, "baseUrl", BASE_URL);
    }

    @Test
    void testRun_DailyBilling_Success() throws Exception {
        // Arrange
        BillingExtractResponse mockResponse = new BillingExtractResponse();
        when(restClient.get(any(String.class))).thenReturn(uriSpec);
        when(uriSpec.retrieve()).thenReturn(responseSpec);
        when(responseSpec.body(BillingExtractResponse.class)).thenReturn(mockResponse);

        // Act
        service.run(BillingPeriod.DAILY);

        // Assert
        verify(restClient, times(1)).get(ArgumentMatchers.contains("/billingInfo"));
        verify(fileWriter, times(1)).write2Files(mockResponse);
    }

    @Test
    void testRun_MonthlyBilling_Success() throws Exception {
        // Arrange
        BillingExtractResponse mockResponse = new BillingExtractResponse();
        when(restClient.get(any(String.class))).thenReturn(uriSpec);
        when(uriSpec.retrieve()).thenReturn(responseSpec);
        when(responseSpec.body(BillingExtractResponse.class)).thenReturn(mockResponse);

        // Act
        service.run(BillingPeriod.MONTHLY);

        // Assert
        verify(restClient, times(1)).get(ArgumentMatchers.contains("/billingInfo"));
        verify(fileWriter, times(1)).write2Files(mockResponse);
    }

    @Test
    void testRun_DefaultBilling_NoCall() throws Exception {
        // Act
        service.run(null);

        // Assert
        verify(restClient, never()).get(any());
        verify(fileWriter, never()).write2Files(any());
    }
}